<style>
.gallery {
    width: calc(100% - 410px);
    margin-top: 10px;
    padding: 0;
    grid-gap: 10px;
    display: grid;
    grid-template-columns: repeat(1,1fr);
}
@media (max-width: 1200px) {

  .gallery {
      width: 100%;
      margin-top: 10px;
      padding: 0;
      grid-gap: 10px;
      display: grid;
      grid-template-columns: repeat(1,1fr);
  }
  .project_info {
    width:100%;
}
.product_info {
  position: sticky;
  top: 10px;
    width: 400px;
    top: 10px;
    right: 10px;
}

}
</style>
<div class="grid_info">
<div class="title">
  <div>{{ product.title }}</div>
</div>
<div class="information">
    <div class="project_info">
      <span> {{ product.content | replace: '_16x16', '' | replace: '_32x32', '' | replace: '_50x50', '' | replace: '_100x100', '' | replace: '_160x160', '' | replace: '_240x240', '' | replace: '_480x480', '' | replace: '_600x600', '' | replace: '_1024x1024', '' }}</span>
    </div>
</div>


    <div class="product_info">
      <div class="besttelen open">BESTELLEN <span>+</span></div>
      <form id="product-actions" action="/cart/add" method="post" enctype="multipart/form-data"
          {%- if product.has_only_default_variant -%}
          class="product-simple"
          {%- elsif variants > 1 -%}
          class="product-variants"
          {%- endif -%}>
          <div id="bag" >
            <div id="product-price"></div>
                       {% if product.compare_at_price > product.price %}
                          <span class="sale">ON SALE</span>
                       {% else %}
                       {% endif %}
               {% if product.available %}
                        {% else %}
             <div class="sold-out">SOLD OUT</div>
                        {% endif %}
            <div class="variations">
                        <select id="product-select" name="id">
                          {% for variant in product.variants %}
                          <option value="{{ variant.id }}"></option>
                          {% endfor %}
                        </select>
                        <div class="info-text">Type some Information for your card</div>
                        <p class="cart-attribute__field">
                          <label  class="show" for="date">Sentence</label>
                          <textarea disabled type="date" id="sentence" name="properties[sentence]" value="2023-07-22" min="2023-01-01" max="2038-12-31" /></textarea>
                        </p>
                        <p class="cart-attribute__field">
                          <label  class="show" for="color">Color</label>
                          <input placeholder="REQUEST COLOR" required class="required" id="color" name="properties[color]"></input>
                        </p>
                        <p class="cart-attribute__field">
                          <label  class="show" for="adress">Adress</label>
                          <input placeholder="ADRESS"  required class="required" id="adress" name="properties[adress]"></input>
                        </p>


                        <div class="info-text">CHOOSE A DATE FOR date for pick up/delivery</div>
                        <p class="cart-attribute__field">
                          <label  class="show" for="date">Date</label>
                          <input type="date" id="date" name="properties[date]" value="2023-07-22" min="2023-01-01" max="2028-12-31" /></input>
                        </p>

                        <div class="info-text">Personal Info</div>
                        <p class="cart-attribute__field">
                          <label  class="show" for="name">Your name</label>
                          <input placeholder="NAME" required class="required" id="name" name="properties[name]">{{ cart.attributes["name"] }}</input>
                        </p>
                        <p class="cart-attribute__field">
                          <label  class="show"  for="phone">Phone</label>
                          <input  placeholder="PHONE NUMBER" required class="required" id="phone" name="properties[phone]"></input>
                        </p>
                        {% if product.available %}
                            <button class="besttelen" id="produ" {% unless product.available %}disabled{% endunless %} type="submit" name="add">ADD TO CART</button>
                        {% else %}
                        {% endif %}
            </div>

          </div>

    </form>
    </div>

    <div class="gallery">
             {% for media in product.media %}
          <div class="slide">
                  {% case media.media_type %}
                      {% when 'video' %}
                      {{ media | video_tag:loop: true, autoplay: true, muted:true}}
                  {% endcase %}
                  {% case media.media_type %}
                      {% when 'image' %}
                      <img class="lazy" src="{{ media | product_img_url: 'thumb' }}" data-src="{{ media | product_img_url: 'master' }}" alt="{{ media.alt }}"/>
                  {% endcase %}
           </div>
              {% endfor %}
              {% for media in product.media %}
              {% endfor %}
    </div>
</div>
{% assign variants = 0 %}
{% for option in product.options %}
{% if product.options.first != 'Title' %}
{% assign variants = variants | plus: 1 %}
{% endif %}
{% endfor %}
<script>
const selector = document.getElementById('product-select-option-2');
const textarea = document.getElementById('sentence');

selector.addEventListener('change', function() {
  if (selector.value === 'SILVERCARD' || selector.value === 'RED CARD') {
    textarea.removeAttribute('disabled');
  } else {
    textarea.setAttribute('disabled', 'disabled');
  }
});

</script>
<script>
  //PRODUCT FUNCTIONS
  var selectCallback = function(variant, selector){
    if(variant){
      if(variant.available){
        jQuery('#add-to-cart').prop('disabled', false).text('ADD TO CART');
      }else{
        jQuery('#add-to-cart').prop('disabled', true).text('SOLD OUT');
      }
      if( variant.compare_at_price > variant.price ) {
        {% if variant.price < variant.compare_at_price %} {{ variant.compare_at_price | money }}{% endif %}
        jQuery('#product-price').html(Shopify.formatMoney(variant.price, "<span>{{ shop.money_format }}</span>") + " <s>" + Shopify.formatMoney(variant.compare_at_price, "{{ shop.money_format }}") + "</s>");
      }else{
        jQuery('#product-price').html(Shopify.formatMoney(variant.price, "{{ shop.money_format }}"));
      }
    }else{
      jQuery('#product-price').empty();
      jQuery('#add-to-cart').prop('disabled', true).text('ADD TO CART');
      {% if product.price_varies %}
        jQuery('#product-price').html('{{ product.price_min | money }} â€“ {{ product.price_max | money }}' );
      {% else %}
        jQuery('#product-price').html('{{ product.price | money }}');
      {% endif %}
    }
  };

  jQuery(function($) {
    new Shopify.OptionSelectors('product-select', {
      product: {{ product | json }},
      onVariantSelected: selectCallback
    });
    {% assign count = -1 %}
    {% for option in product.options %}
    {% if product.options.first != 'Title' %}
      {% assign count = count | plus: 1 %}
      $("#product-select-option-{{ count }}").prepend("<option value='' disabled selected>{{ product.options[count] | upcase }}</option>");
    {% endif %}
    {% endfor %}
  });
</script>
